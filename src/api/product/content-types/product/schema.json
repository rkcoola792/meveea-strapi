{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "description": {
      "type": "text",
      "required": false
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "tshirts",
        "hoodie",
        "shirts",
        "bottom wear",
        "new arrival"
      ],
      "default": "tshirts",
      "required": true
    },
    "size": {
      "type": "string",
      "maxLength": 50
    },
    "color": {
      "type": "enumeration",
      "enum": [
        "red",
        "blue",
        "white ",
        "black"
      ],
      "required": true
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "availaibleQTY": {
      "type": "integer",
      "required": true
    }
  }
}
